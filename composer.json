{
    "name": "bloom-ux/queulat",
    "description": "Developers toolset for WordPress",
    "type": "wordpress-muplugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Felipe Lav√≠n Z.",
            "email": "felipe@blom.lat"
        }
    ],
	"suggest": {
		"wp-cli/wp-cli": "Provides integration with code generators"
	},
    "require": {
        "twig/twig": "^3.0",
        "doctrine/inflector": "^2.0",
        "composer/installers": "^2",
        "minwork/array": "^1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.1",
        "php-parallel-lint/php-parallel-lint": "^1",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "classmap":[
            "src/"
        ],
        "files": [
            "src/helpers/helpers-admin.php"
        ]
    },
    "scripts": {
        "fix": "phpcbf src/ --extensions=php",
        "lint": "parallel-lint ./src --blame --exclude vendor",
        "sniff": "phpcs src/",
        "analyze": "phan -p -j 4 --color",
        "compat": "phpcs -p --standard=PHPCompatibility --runtime-set testVersion 7.4 -n src/ --extensions=php --cache"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
